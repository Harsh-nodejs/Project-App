<section
  class="xss:-mt-32 lg:px-6 2xl:px-12 mb-20"
  id="article_content_section"
>
  <div
    class="flex w-full flex-col space-y-4 xss:px-3 md:px-6 py-4 bg-blue-500  min-h-128"
    id="acticle--section"
  >
  <!-- Heading -->
    <div class="flex flox-row self-start translate-x-[5vw] my-16 xss:mx-4 sm:mx-0">
        <h1 class="xss:text-2xl sm:text-3xl lg:text-5xl " style="font-family: 'Protest Guerrilla', sans-serif;">Featured <span class="text-orange-400">Jobs</span></h1>
    </div>
    <!-- Heading END -->
    <!-- Article Container -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 3xl:grid-cols-4 gap-x-2 gap-y-4 self-center" id="acticleContainer">

      <% Data.forEach(el => { %>
    <!-- Each Article -->
    <div class="flex rounded-sm bg-white">
      <div
        class="flex xss:flex-col sm:flex-row space-x-2 items-center m-[4px] "
      >
        <div class="flex size-24 rounded-sm grow-0 justify-start p-1">
          <img src="/assets/find-my-way-high-resolution-logo.png" alt="" class="" />
        </div>
        <div
          class="flex flex-initial flex-col xss:w-max md:w-[16rem] h-full justify-around mr-2"
        >
          <div class="flex">
            <h1 class="text-xl font-semibold">Position of the Job</h1>
          </div>
          <div class="flex">
            <h3 class="text-md font-light translate-y-1">Location</h1>
          </div>
          <div class="flex flex-row divide-x divide-slate-300">
            <div class="flex-0">
              <span class="bg-green-300 text-green-600 rounded-full me-1 px-2.5 py-0.5 text-sm font-medium transition-all hover:bg-green-500 hover:text-white hover:scale-105 ">Full Time</span>
            </div>
            <div class="flex flex-1">
              <span class="bg-green-300 text-green-600 rounded-full ml-1 me-1 xss:px-1.5 md:px-2.5 py-0.5 text-sm font-medium">Full Time</span>
              <span class="bg-green-300 text-green-600 rounded-full me-1 xss:px-1.5 md:px-2.5 py-0.5 text-sm font-medium">Full Time</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- each article End -->
  <% }); %>
    </div>
    <!-- article Container end -->
  </div>
</section>